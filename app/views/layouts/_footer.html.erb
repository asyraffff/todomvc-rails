<footer class="footer">
  <span class="todo-count"><%= pluralize(Todo.active.count, 'item') %> left</span>
  <ul class="filters">
    <li><%= link_to 'All', root_path, class: ('selected' unless params[:scope]) %></li>
    <li><%= link_to 'Active', active_todos_path, class: ('selected' if params[:scope] == 'active') %></li>
    <li><%= link_to 'Completed', completed_todos_path, class: ('selected' if params[:scope] == 'completed') %></li>
  </ul>
  <% if Todo.completed.any? %>
    <%= button_to(clear_completed_todos_url, method: :delete, remote: true, class: 'clear-completed') do %>
      Clear completed
    <% end %>
  <% end %>
</footer>